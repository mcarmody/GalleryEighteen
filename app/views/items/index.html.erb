<%= render 'layouts/breadcrumbs' %>

<div class = "container">
  <!-- <h1>Listing items</h1> -->
      <div id="masonry-container" class="store-container infinite-scroll">
        <% @items.each do |item| %>
          <%= link_to item do %>
            <div class="item box small-2 large-4 columns">
              <%= image_tag item.pic %>
              <div class="art-label">
                <%= item.title %>
                <div class="artist">by
                  <% if item.user != nil %>
                    <%= item.user.name %>
                  <% else %>
                    Anonymous
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
  </div>