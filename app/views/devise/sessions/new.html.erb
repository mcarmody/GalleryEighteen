<div class="wallpaper-login">
	<div class="container">
		<div class="form">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="fields">
			<div class="title">Sign In</div>

			<div class="email"><%= f.label :email %>
		  	<%= f.email_field :email, :autofocus => true %></div>

		  	<div class="password"><%= f.label :password %>
		  	<%= f.password_field :password %></div>

	  		<% if devise_mapping.rememberable? -%>
		    <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  	<% end -%>
		</div>
		  <div class="login"><%= f.submit "Sign in", :class => 'tiny button' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>