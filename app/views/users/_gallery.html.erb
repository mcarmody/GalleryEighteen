<div class="user-gallery">
	<% @user.items.each do |item| %>
          <%= link_to item do %>
            <div class="item-thumb box small-2 large-4 columns">
              <%= image_tag item.pic %>
              <div class="art-label">
                <%= item.title %>
              <% end %>
            </div>
          </div>
        <% end %>
</div>